<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="昵称"/>
        <EditText
            android:id="@+id/personalinfo_edit_name"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="性别"/>
        <TextView
            android:id="@+id/personalinfo_edit_gender"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="年龄"/>
        <EditText
            android:id="@+id/personalinfo_edit_age"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </TableRow><TableRow>
    <TextView
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="生日"/>
    <EditText
        android:id="@+id/personalinfo_edit_birth"
        android:layout_height="wrap_content"
        android:textSize="20sp" />
</TableRow><TableRow>
    <TextView
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="星座"/>
    <EditText
        android:id="@+id/personalinfo_edit_constellation"
        android:layout_height="wrap_content"
        android:textSize="20sp" />
</TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="故乡"/>
        <EditText
            android:id="@+id/personalinfo_edit_hometown"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="邮箱"/>
        <EditText
            android:id="@+id/personalinfo_edit_email"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/personalinfo_edit_confirm"
            android:layout_span="2"
            android:textSize="40sp"
            android:text="确定"/>
    </TableRow>

</TableLayout>