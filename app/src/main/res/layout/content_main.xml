<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.czy19.signinapplication.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/landscript"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/mainpage_todaysign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/sign_in"
                android:textSize="30sp"
                android:gravity="bottom"
                android:text="今日签到"/>
            <TextView
                android:layout_width="60sp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/mainpage_totalrecord"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/total_signin"
                android:textSize="30sp"
                android:gravity="bottom"
                android:text="签到记录"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/mainpage_conveniently"
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:background="@drawable/bill_icon"
                android:textSize="30sp"
                android:gravity="bottom|center"
                android:text="随手记"/>

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/mainpage_notification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/notification"
                android:textSize="30sp"
                android:gravity="bottom|center"
                android:text="通知"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/mainpage_memorandum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/memorandum"
                android:gravity="bottom|center"
                android:textSize="30sp"
                android:text="备忘录"/>
            <TextView
                android:layout_width="60sp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/mainpage_connection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/communication"
                android:gravity="bottom|center"
                android:textSize="30sp"
                android:text="通讯录"/>
            <TextView
                android:layout_width="60sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </LinearLayout>
</LinearLayout>
